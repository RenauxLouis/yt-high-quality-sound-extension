{
  "manifest_version": 3,
  "name": "PURE ASMR",
  "version": "3.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"],
      "js": [
        "bfy_content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "*://www.youtube.com/*"
  ]
}